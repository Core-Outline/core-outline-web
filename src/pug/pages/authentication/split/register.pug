extends ../../../layouts/LayoutSplit
include ../../../mixins/authentication/RegisterForm
include ../../../mixins/authentication/SocialButtons
include ../../../mixins/authentication/FormHeader

block append variables
  - var background = { image: `${CWD}assets/img/generic/19.jpg` }

block splitContent
  +FormHeader({
    title: {
      text: 'Register',
      tag: "h3",
    },
    normalContent: {
      text: 'Already User?',
      className:'fw-semi-bold',
    },
    linkText: 'Login',
    link:'split/login.html'
  })


  script.
    var currentPage = 'company_details';
  +RegisterForm({
    name: {
      label: 'Name',
      attrs: { id: 'name' }
    },
    email: {
      label: 'Email address',
      attrs: { id: 'modal-auth-email' }
    },
    password: {
      label: 'Password',
      attrs: { id: 'modal-auth-password' }
    },
    confirmPassword: {
      label: 'Confirm Password',
      attrs: { id: 'modal-auth-confirm-password' }
    },
    companyName: {
      label: 'Company Name',
      attrs: { id: 'modal-company-name' }
    },
    contactEmail: {
      label: 'Contact Email',
      attrs: { id: 'modal-company-email' }
    },
    location: {
      label: 'Location',
      attrs: { id: 'modal-location' }
    },
    industry: {
      label: 'Industry',
      attrs: { id: 'modal-industry' }
    },
    employeeCount: {
      label: 'Number of Employees',
      attrs: { id: 'modal-employee-count' }
    },
    checkbox: { attrs: { id: 'modal-auth-register-checkbox' } },
  })
  +SocialButtons({ title: 'register' }).mt-4