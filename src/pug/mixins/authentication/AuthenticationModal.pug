include SocialButtons
include RegisterForm

mixin AuthenticationModal
  #authentication-modal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='authentication-modal-label' aria-hidden='true')
    .modal-dialog.mt-6(role='document')
      .modal-content.border-0
        .modal-header.px-5.position-relative.modal-shape-header.bg-shape
          .position-relative.z-1(data-bs-theme="light")
            h4.mb-0.text-white#authentication-modal-label Register
            p.fs--1.mb-0.text-white Please create your free Core&Outline account
          button.btn-close.btn-close-white.position-absolute.top-0.end-0.mt-2.me-2(data-bs-dismiss="modal" aria-label="Close")

        .modal-body.py-4.px-5
          +RegisterForm({
            name: { attrs: { placeholder: 'Name'} },
            email: { attrs: { placeholder: 'Email address' } },
            password: { attrs: { placeholder: 'Password' } },
            confirmPassword: { attrs: { placeholder: 'Confirm Password' } },
            checkbox: { attrs: { id: 'modal-register-checkbox' } },
            companyName: { attrs: { placeholder: 'Company Name'} },
            contactEmail: { attrs: { placeholder: 'Contact Email' } },
            location: { attrs: { placeholder: 'Location' } },
            industry: { attrs: { placeholder: 'Industry: advertising, agriculture, hospitality etc.' } },
            employeeCount: { attrs: { placeholder: 'Number of Employees' } },
          })

          +SocialButtons({ title: 'register' }).mt-5